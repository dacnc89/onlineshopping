.gridRow
  .col-md-2.well
    
    #cart
      - unless @cart.present? && @cart.line_items.empty?
        =render @cart
    /.row.col-md-10-offset-1.well
    %strong Refine
    .row.col-md-10-offset-1.well
      .title 
        %strong Category
      .contain
  .col-md-10.span64.well
    .productRow
      - @products.each do |product|
        .col-md-3.col-xs-6.productDetail.text-center.well
          .image.img-rounded
            = link_to image_tag(product.image.url),product
          .title
            = link_to product.title, product
          .des
            = product.description
          .price
            = number_to_currency(product.price)
          .btnAddToCart
            = button_to 'Add to Cart', line_items_path(product_id: product), class: 'btn btn-primary', remote: true
        
    .col-md-12.text-center.digg_pagination
      .pagination
        = will_paginate @products