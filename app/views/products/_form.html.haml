= simple_form_for @product,url: products_path do |f|
  = f.error_notification

  .form-inputs
    = f.input :title,label: 'Tên sản phẩm'
    = f.input :description, label: 'Mô tả'
    / = f.input :image_url
    = f.input :price, label: 'Giá'
    = f.input :image, as: :file, label: 'Hình ảnh sản phẩm'
    = f.input :category, collection: Category.all, label: 'Loại'

  .form-actions
    = f.button :submit, 'Tạo sản phẩm'
