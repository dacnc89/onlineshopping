/
#cartt
  %br
  /  
    %h3 Giỏ hàng của bạn
  - if @cart.total_line > 0
    = button_to 'Xóa tất cả', @cart, method: :delete, data: {confirm: 'Bạn có chắc chắc xóa tất cả các sản phẩm trong giỏ hàng của bạn?'}, class: 'btn btn-warning'
  %br
  .line-items-box
    %table
      = render partial: 'line_items/line_item', collection: @cart.line_items
  
  
  .totalLine
  /
    %br Total line
    = @cart.total_line
  - if @cart.total_line > 0
    %strong Total : 
    = number_to_currency(@cart.total_price, unit: "VNĐ ")
    = button_to 'Đặt hàng', new_order_path, method: :get, class: 'btn btn-info'
  - else
    %p Giỏ hàng của bạn đang trống !

/
  #cart
  = @cart.total_line
